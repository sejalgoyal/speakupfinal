<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#506368"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/name1">
    </EditText>
    <EditText
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Password"

        android:layout_marginTop="260dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/pass1">
    </EditText>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/log"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:checked="false"
        >
    </TextView>
    <TextView
        android:id="@+id/tex"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/logi"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:checked="false"
        >
    </TextView>

    <TextView
        android:id="@+id/text2"

        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="Username"
        android:textSize="35sp"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        android:fontFamily="calibri"
        />

    <Button
        android:layout_marginTop="330sp"
        android:layout_width="200dp"
        android:layout_marginLeft="100dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"

        android:text="Login"
        android:shadowColor="#000000"
        android:onClick="sendMessage"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:enabled="true"
        android:focusable="true"
        android:id="@+id/but2"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/text3"

        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:text="Password"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:fontFamily="calibri"
        android:layout_alignBaseline="@+id/pass1"
        android:layout_alignBottom="@+id/pass1"
        android:layout_alignRight="@+id/but2"
        android:layout_alignEnd="@+id/but2"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>